generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum sesuai permintaan soal
enum TodoStatus {
  created
  completed
  on_going
  problem
}

model Todo {
  id           Int        @id @default(autoincrement())
  title        String
  status       TodoStatus @default(created)
  problem_desc String?    // Optional, diisi kalau statusnya 'problem'
  ai_recommendation String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}